<%= link_to user_path(user) do %>
  <div class="userCard">
    <div class="userCardLeft">
       <%= image_tag user.photo, alt: "#{user.name}-avatar", class: 'profile-image' %>
    </div>
    <div class="userCardRight">
      <h3 class="username"><%= user.name %></h3>
      <span class="post-counter">Number of posts: <%= user.posts_counter %></span>
    </div>
  </div>
<% end %>